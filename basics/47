#include<stdio.h>
#include<string.h>

int main()
{
	char text[50],connect[50];
	int num;
	
	printf("输入一个字符串:\n");
	scanf("%s",&text);
	num=strlen(text);
	printf("字符串的长度为:%d\n",num);
	printf("再输入一个字符串:\n");
	scanf("%s",&connect);
	num=strlen(connect);//计算字符串长度
	printf("字符串的长度为:%d\n",num);
	strcat(text,connect);//连接字符串
	printf("将俩个字符串的长度进行链接:%s\n",text);
	num=strlen(text);//计算连接后的字符串
	printf("连接后的字符串长度为:%d\n",num);
	
	getch();
	return 0;
	
}
