#include<stdio.h>

int main()
{
	int name = 1;
	while (name!= 0)
	{
		printf("----Menu------\n");
		printf("--Sell---------\n");
		printf("---Buy----------\n");
		printf("----ShowProduct---\n");
		printf("---Out-----------\n");
		
		
		scanf_s("%d", &name);
		switch (name)
		{
		case 1:
			printf("请重新输入");
			break;
		case 2:
			printf("请重新输入");
			break;
		case 3:
			printf("请重新输入");
			break;
		default:
			printf("请重新输入");
			break;
		case 0:
			printf("恭喜你！！");
			break;
		}
	}
	getch();
	return 0;
}
